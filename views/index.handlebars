<div class="container">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand">
          <h1 id="title_text"> <img id="burger_image" src="/assets/burger_image.png" alt="Burger"> Burger Devourer</h1>
        </a>
      </div>
    </div>
  </nav>
  <form>
  <div class="form-group">
    <label for="user_burger">Burger Name:</label>
    <input type="email" class="form-control" id="user_burger" placeholder="enter dream burger name here">
  </div>
  <button type="submit" class="btn btn-default" id="submit_button">Submit Burger</button>
</form>
<div class="row">
  <div class="col-md-6">
    <h3> Burgers still to be devoured: </h3>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.id}}
            {{this.burger_name}}
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    <h3> Burgers already devoured: </h3>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.id}}
            {{this.burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ul>


  </div>
</div>



</div>
